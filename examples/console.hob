import "libc.hob" as c;

fun read_line(): *u8 {
	var c = c::get_char();
	var i = 1;
	var result = c::malloc(i) as *u8;
	while c != '\n' {
		result[i - 1] = c;
		i = i + 1;
		result = c::realloc(result as *void, i) as *u8;
		c = c::get_char();
	}
	result[i] = '\0';
	return result;
}

fun write(str: *u8): void {
	c::printf(str);
}

fun write_line(str: *u8): void {
	c::puts(str);
}
