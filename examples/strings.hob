import "str.hob" as str;

type String = str::String;

fun main(): void {
	var str = str::new();
	defer str::free_s(@str);
	str::push(@str, '#');
	str::push(@str, ' ');

	var hello = str::from_mem("hello", 5);
	defer str::free_s(@hello);

	var sep = str::from_mem(", ", 2);
	defer str::free_s(@sep);

	var world = str::from_mem("world", 5);
	defer str::free_s(@world);

	str::append(@str, @hello);
	str::append(@str, @sep);
	str::append(@str, @world);
	str::push(@str, '\n');

	str::print(@str);
}
