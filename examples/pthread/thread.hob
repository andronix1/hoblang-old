import "attr.hob" as attr;

type Thread = u64;

extern(pthread_create) fun create(
    thread: *Thread,
    attr: *attr::Attr,
    routine: fun (*void) -> *void,
    arg: *void
): i32

extern(sleep) fun sleep(secs: u32): u32
extern(pthread_join) fun join(thread: Thread): i32
extern(pthread_detach) fun detach(thread: Thread): i32
extern(pthread_exit) fun exit(value: *void): void