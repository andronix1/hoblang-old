import "std.hob" as std;

use std::libc;

fun main(): void {
	var sum = 10;
	std::put_cstr(['H', 'e', 'l', 'l', 'o', ',', ' ', 'w', 'o', 'r', 'l', 'd', '!', '\n', '\0']);
	std::put_cstr("Hello, world using strs!\n\0");
	while true {
		std::libc::put_char('>');
		std::libc::put_char(' ');
		var a = std::get_int();
		sum = sum + a;
		std::put_int(sum);
		std::libc::put_char('\n');
	}
}
