import "../libc/lib.hob" as libc;

use libc::mem;
use libc::io;

fun read_line(): *u8 {
	var c = io::get_char();
	var i = 1;
	var result = mem::malloc(i as libc::types::size_t) as *u8;
	while c != '\n' {
		result[i - 1] = c;
		i = i + 1;
		result = mem::realloc(result as *void, (i + 1) as libc::types::size_t) as *u8;
		c = io::get_char();
	}
	result[i] = '\0';
	return result;
}

fun write(str: *u8): void {
	io::printf(str);
}

fun write_line(str: *u8): void {
	io::puts(str);
}
